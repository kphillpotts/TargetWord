<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TargetWord.Pages.GamePage"
             
             Title="GamePage"
             BackgroundColor="{StaticResource Background}">
    <Grid RowDefinitions="*,*">
        <Label Text="{Binding MyText}" TextColor="Red" />
        <Grid Grid.Row="1" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">
            <Button Text="0" Grid.Row="0" Grid.Column="0"/>
            <Button Text="0" Grid.Row="0" Grid.Column="1"/>
            <Button Text="0" Grid.Row="0" Grid.Column="2"/>
            <Button Text="0" Grid.Row="1" Grid.Column="0"/>
            <Button Text="0" Grid.Row="1" Grid.Column="1"/>
            <Button Text="0" Grid.Row="1" Grid.Column="2"/>
            <Button Text="0" Grid.Row="2" Grid.Column="0"/>
            <Button Text="0" Grid.Row="2" Grid.Column="1"/>
            <Button Text="0" Grid.Row="2" Grid.Column="2"/>
        </Grid>
    </Grid>

</ContentPage>